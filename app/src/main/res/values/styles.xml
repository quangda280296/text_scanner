<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppThemeTranslate" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="txt_base">
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/f_sans_regular</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="mainScreen" parent="AppThemeNoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/home_background</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textNormalWhite">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/f_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="textNormalBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/f_san_semibold</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="textNormal">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/f_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="myCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/dimen_8dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="btn_primary_1" parent="txt_base">
        <item name="android:background">@drawable/btn_save</item>
        <item name="android:textColor">@color/btn_white</item>
        <item name="android:textSize">@dimen/text_size_15sp</item>
        <item name="android:fontFamily">@font/f_sans_bold</item>
        <item name="android:paddingStart">@dimen/margin_35dp</item>
        <item name="android:paddingEnd">@dimen/margin_35dp</item>
        <item name="android:paddingTop">@dimen/margin_12dp</item>
        <item name="android:paddingBottom">@dimen/margin_12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn_primary_2" parent="txt_base">
        <item name="android:background">@drawable/btn_transparent</item>
        <item name="android:textColor">@color/btn_white</item>
        <item name="android:textSize">@dimen/text_size_15sp</item>
        <item name="android:fontFamily">@font/f_sans_bold</item>
        <item name="android:paddingStart">@dimen/margin_35dp</item>
        <item name="android:paddingEnd">@dimen/margin_35dp</item>
        <item name="android:paddingTop">@dimen/margin_12dp</item>
        <item name="android:paddingBottom">@dimen/margin_12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_1</item>
        <item name="android:fontFamily">@font/f_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="headerCalendar">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_1</item>
        <item name="android:fontFamily">@font/f_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="txt_cc_title" parent="txt_base">
        <item name="android:fontFamily">@font/f_san_semibold</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/primary_1</item>
    </style>

    <style name="txt_cc_normal" parent="txt_base">
        <item name="android:fontFamily">@font/f_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/primary_1</item>
    </style>

    <style name="txt_cc_author" parent="txt_base">
        <item name="android:fontFamily">@font/f_san_semibold</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/txt_primary_2</item>
    </style>

    <style name="slashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>
