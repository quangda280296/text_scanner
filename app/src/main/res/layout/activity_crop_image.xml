<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        tools:context=".activity.CropImageActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    app:layout_collapseMode="parallax"
                    app:titleTextColor="#263637" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnBack"
                    android:layout_width="?android:attr/actionBarSize"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-5dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="@dimen/dimen_17dp"
                    android:src="@drawable/ic_back_button"
                    android:tint="@color/btn_white" />

                <TextView
                    android:id="@+id/txtTitle"
                    style="@style/textNormalBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:layout_toEndOf="@+id/btnBack"
                    android:gravity="center"
                    android:text="@string/crop_image"
                    android:visibility="visible"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <com.theartofdev.edmodo.cropper.CropImageView
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cropBorderLineColor="@color/bg_border_crop"
            app:layout_constraintBottom_toTopOf="@+id/rlBottom"
            app:layout_constraintTop_toBottomOf="@+id/appbar"
            custom:cropInitialCropWindowPaddingRatio="0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rlBottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:1">

            <ImageView
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_tick_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="3:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
