<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MyDocumentActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    app:layout_collapseMode="parallax"
                    app:titleTextColor="#263637" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnBack"
                    android:layout_width="?android:attr/actionBarSize"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-5dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="@dimen/dimen_17dp"
                    android:src="@drawable/ic_back_button"
                    android:tint="@color/btn_white" />

                <TextView
                    android:id="@+id/title"
                    style="@style/textNormalBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:layout_toStartOf="@+id/llRight"
                    android:layout_toEndOf="@+id/btnBack"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingEnd="@dimen/margin_10dp"
                    android:text="@string/my_doc"
                    android:visibility="visible"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RelativeOverlap,RtlSymmetry" />

                <LinearLayout
                    android:id="@+id/llRight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btnSelectAll"
                        android:layout_width="?android:attr/actionBarSize"
                        android:layout_height="?android:attr/actionBarSize"
                        android:layout_marginEnd="-8dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="@dimen/margin_16dp"
                        android:src="@drawable/ic_select"
                        android:tint="@color/btn_white"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btnShare"
                        android:layout_width="?android:attr/actionBarSize"
                        android:layout_height="?android:attr/actionBarSize"
                        android:layout_marginEnd="-8dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="@dimen/margin_16dp"
                        android:src="@drawable/ic_share_button"
                        android:tint="@color/btn_white"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btnSort"
                        android:layout_width="?android:attr/actionBarSize"
                        android:layout_height="?android:attr/actionBarSize"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="@dimen/margin_16dp"
                        android:src="@drawable/ic_sort"
                        android:tint="@color/btn_white" />
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <thent.vietmobi.textscanner.widget.MyPullToRefresh
            android:id="@+id/swRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/adView"
            android:layout_below="@+id/appbar">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_10dp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/margin_10dp"
                app:cardElevation="@dimen/margin_10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>
        </thent.vietmobi.textscanner.widget.MyPullToRefresh>

        <TextView
            android:id="@+id/tvNoResult"
            style="@style/textNormalBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dimen_60dp"
            android:text="@string/null_file"
            android:textColor="@color/primary_2"
            android:textSize="@dimen/text_size_16sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_5dp" />
    </RelativeLayout>
</layout>